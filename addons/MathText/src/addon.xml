<?xml version="1.0" encoding="UTF-8" ?>

<addon id="MathText" xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
    <model>
        <property name="initialText" nameLabel="Mathtext_property_text" type="mathtext" />
        <property name="correctAnswer" nameLabel="Mathtext_property_correctAnswer" type="mathanswer" />

        <property name="type" nameLabel="Mathtext_property_type" type="{text, editor, activity}" />
        <property name="isDisabled" nameLabel="Mathtext_property_is_disabled" type="boolean" />
        <property name="language" displayName="Language" nameLabel="Mathtext_property_language" type="{English, Polish, French, Arabic, Spanish}"/>

        <property name="formulaColor" type="string" nameLabel="Mathtext_property_formula_color" />
        <property name="backgroundColor" type="string" nameLabel="Mathtext_property_background_color" />
    </model>
</addon>