<?xml version='1.0' encoding='UTF-8' ?>

<addon id='TextAudio' xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
	<model>
        <property name="controls" displayName="Controls" nameLabel='TextAudio_property_controls' type="{None, Browser, Custom}" />
        <property name='displayTime' displayName='Display time' nameLabel='TextAudio_property_display_time' type='boolean' />
        <property name='enableLoop' displayName='Enable loop' nameLabel='TextAudio_property_enable_loop' type='boolean' />

        <property name='Slides' nameLabel='TextAudio_property_slides' type='list' isDefault="true">
            <property name='Text' nameLabel='TextAudio_property_text' type='html' isLocalized='true' />
            <property name='Times' nameLabel='TextAudio_property_times' type='text' isLocalized='true' />
            <property name='positionAndDimentions' displayName="Position and Dimentions" nameLabel='TextAudio_property_position_and_dimentions' type='text' isLocalized='true' />
        </property>
        <property name='mp3' nameLabel='TextAudio_property_mp3' type='audio' />
        <property name='ogg' nameLabel='TextAudio_property_ogg' type='audio' />

        <property name="clickAction" displayName="On Text Click Behavior" nameLabel='TextAudio_property_click_action' type="{Play from the moment, Play the interval, Play the interval from vocabulary file}" />
        <property name='vocabulary_mp3' displayName="Vocabulary mp3" nameLabel='TextAudio_property_vocabulary_mp3' type='audio' />
        <property name='vocabulary_ogg' displayName="Vocabulary ogg" nameLabel='TextAudio_property_vocabulary_ogg' type='audio' />
        <property name='vocabulary_intervals' displayName="Vocabulary intervals" nameLabel='TextAudio_property_vocabulary_intervals' type='text' isLocalized='true' />

        <property name='onEnd' displayName='On end' nameLabel='TextAudio_property_vocabulary_on_end' type='event' />
        <property name='isClickDisabled' displayName='Is Click Disabled' nameLabel='TextAudio_property_is_click_disabled' type='boolean' />
        <property name="showSlides" displayName="Show Slides" nameLabel='TextAudio_property_show_slides' type="{Show current slide, Show all slides}" />
        <property name="isDisabled" type="boolean" nameLabel="TextAudio_property_is_disabled"/>
    </model>
</addon>