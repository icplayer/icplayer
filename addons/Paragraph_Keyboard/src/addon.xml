<?xml version='1.0' encoding='UTF-8' ?>

<addon id='Paragraph_Keyboard' xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
	<model>
		<property name="Default font family" nameLabel="Paragraph_Keyboard_property_default_font_family" type="string" />
		<property name="Default font size" nameLabel="Paragraph_Keyboard_property_default_font_size" type="string" />
		<property name="Hide toolbar" nameLabel="Paragraph_Keyboard_property_hide_toolbar" type="boolean" />
		<property name="Editable placeholder" nameLabel="Paragraph_Keyboard_property_editable_placeholder" type="boolean" />
		<property name="Custom toolbar" nameLabel="Paragraph_Keyboard_property_custom_toolbar" type="string" />
		<property name="Custom CSS" nameLabel="Paragraph_Keyboard_property_custom_css" type="file" />
		<property name="useCustomCSSFiles" nameLabel="Paragraph_Keyboard_property_use_custom_css_files" type="boolean" />
		<property name="Placeholder Text" nameLabel="Paragraph_Keyboard_property_placeholder_text" type="html"/>
		<property name="layoutType" displayName="Keyboard Layout Type" nameLabel="Paragraph_Keyboard_property_layout_type"
			type="{French (Special Characters), German (Special Characters), Spanish (Special Characters), Custom}" />
		<property name="keyboardLayout" displayName="Custom Keyboard Layout" nameLabel="Paragraph_Keyboard_property_keyboard_layout" type="text" />
		<property name="keyboardPosition" displayName="Keyboard position" nameLabel="Paragraph_Keyboard_property_keyboard_position" type="{Bottom, Top, Left, Right, Custom}" />
		<property name="Manual grading" nameLabel="Paragraph_Keyboard_property_manual_grading" type="boolean" />
		<property name="Show Answers" nameLabel="Paragraph_Keyboard_property_show_answers" type="html" />
		<property name="Title" nameLabel="Paragraph_Keyboard_property_title" type="string" />
		<property name="Weight" nameLabel="Paragraph_Keyboard_property_weight" type="string" />
		<property name="printable" nameLabel="printable_name_label" type="{No, Don't randomize, Randomize}" />
        <property name="speechTexts" displayName="Speech texts" nameLabel="Paragraph_Keyboard_property_speech_texts" type="staticlist">
            <property name="Selected" nameLabel="Paragraph_Keyboard_property_selected" type="staticrow">
                <property name="Selected" nameLabel="Paragraph_Keyboard_property_selected" type="string"/>
            </property>
            <property name="Deselected" nameLabel="Paragraph_Keyboard_property_deselected" type="staticrow">
                <property name="Deselected" nameLabel="Paragraph_Keyboard_property_deselected" type="string"/>
            </property>
			<property name="ParagraphContent" nameLabel="Paragraph_Keyboard_property_ParagraphContent" type="staticrow">
				<property name="ParagraphContent" nameLabel="Paragraph_Keyboard_property_ParagraphContent" type="string"/>
			</property>
			<property name="Bold" nameLabel="Paragraph_Keyboard_property_bold" type="staticrow">
				<property name="Bold" nameLabel="Paragraph_Keyboard_property_bold" type="string"/>
			</property>
			<property name="Italic" nameLabel="Paragraph_Keyboard_property_italic" type="staticrow">
				<property name="Italic" nameLabel="Paragraph_Keyboard_property_italic" type="string"/>
			</property>
			<property name="Underline" nameLabel="Paragraph_Keyboard_property_underline" type="staticrow">
				<property name="Underline" nameLabel="Paragraph_Keyboard_property_underline" type="string"/>
			</property>
			<property name="AlignLeft" nameLabel="Paragraph_Keyboard_property_AlignLeft" type="staticrow">
				<property name="AlignLeft" nameLabel="Paragraph_Keyboard_property_AlignLeft" type="string"/>
			</property>
			<property name="AlignCenter" nameLabel="Paragraph_Keyboard_property_AlignCenter" type="staticrow">
				<property name="AlignCenter" nameLabel="Paragraph_Keyboard_property_AlignCenter" type="string"/>
			</property>
			<property name="AlignRight" nameLabel="Paragraph_Keyboard_property_AlignRight" type="staticrow">
				<property name="AlignRight" nameLabel="Paragraph_Keyboard_property_AlignRight" type="string"/>
			</property>
			<property name="Justify" nameLabel="Paragraph_Keyboard_property_Justify" type="staticrow">
				<property name="Justify" nameLabel="Paragraph_Keyboard_property_Justify" type="string"/>
			</property>
            <property name="Shift" nameLabel="Paragraph_Keyboard_property_Shift" type="staticrow">
				<property name="Shift" nameLabel="Paragraph_Keyboard_property_Shift" type="string"/>
			</property>
		</property>
		<property displayName="Lang attribute" name="langAttribute" nameLabel="Paragraph_Keyboard_property_lang_attribute" type="string"/>
	</model>
</addon>